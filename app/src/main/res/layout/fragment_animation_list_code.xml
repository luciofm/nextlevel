<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_dark"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:id="@+id/container"
    android:clickable="true"
    tools:context="com.luciofm.ifican.app.ui.TouchFeedbackCodeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:layout_margin="@dimen/padding"
        android:id="@+id/container2"
        android:visibility="gone"
        tools:visibility="visible"
        android:gravity="center">

        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/muambator_anim"
            android:layout_margin="@dimen/padding"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text2"
            android:visibility="gone"
            tools:visibility="visible"
            style="@style/TextCode"/>
    </LinearLayout>

    <com.luciofm.nextlevel.ifican.widget.TextView
        android:id="@+id/text1"
        android:text="AnimationDrawable"
        android:layout_marginBottom="@dimen/padding"
        android:padding="@dimen/padding_big"
        android:gravity="center"
        android:textSize="@dimen/text_title_small"
        android:layout_gravity="center_horizontal|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_light"
        android:background="@color/pink"
        app:typeFace="YanoneKaffeesatz-Regular.ttf"/>

</LinearLayout>
